<h1>Flickr Feed</h1>

<%= form_with(method: :get, local: true) do |f| %>
  <%= f.label :flickr_id, 'Flickr id'%>
  <%= f.text_field :flickr_id %>

  <%= f.submit 'Show feed' %>
<% end %>

<% if @feed %>
  <h2><%= @user.first_name %>'s Photos</h2>
  <% @feed.each do |photo| %>
    <%= image_tag photo %>
  <% end %>
<% end %>
